{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "NiosV: Build (Debug)",
            "type": "shell",
            "command": "${config:cmake.cmakePath}",
            "args": [
                "--build",
                "./build",
                "--config",
                "Debug",
                "--parallel"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:/altera_pro/25.1.1/niosv/bin;C:/altera_pro/25.1.1/riscfree/build_tools/bin;C:/altera_pro/25.1.1/riscfree/toolchain/riscv32-unknown-elf/bin;${env:PATH}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "NiosV: Download & Run (no reset)",
            "type": "shell",
            "command": "niosv-download",
            "args": [
                "-g",
                "-c",
                "1",
                "./build/app.elf"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "C:/altera_pro/25.1.1/niosv/bin;C:/altera_pro/25.1.1/riscfree/debugger/gdbserver-riscv;C:/altera_pro/25.1.1/riscfree/toolchain/riscv32-unknown-elf/bin;C:/altera_pro/25.1.1/riscfree/build_tools/bin;${env:PATH}",
                    "HOME": "${workspaceFolder}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "NiosV: Build & Flash (no reset)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "NiosV: Build (Debug)",
                "NiosV: Download & Run (no reset)"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "NiosV: JTAG UART terminal",
            "type": "shell",
            "command": "juart-terminal",
            "options": {
                "env": {
                    "PATH": "C:/altera_pro/25.1.1/niosv/bin;${env:PATH}"
                }
            },
            "problemMatcher": []
        }
    ]
}